{
  "name": "pollen-solutions/view",
  "description": "Pollen View Component - Template engine system.",
  "homepage": "https://www.presstify.com/pollen-solutions/view/",
  "keywords": [
    "pollen-solutions",
    "component",
    "view",
    "template engine"
  ],
  "time": "2021-06-23",
  "license": "MIT",
  "authors": [
    {
      "name": "Jordy Manner",
      "email": "jordy@presstify.com"
    }
  ],
  "repositories": [
    {
      "type": "composer",
      "url": "https://composer.presstify.com/pollen-solutions/"
    }
  ],
  "require": {
    "php": ">=7.4",
    "composer/composer": "^2.0",
    "composer/installers": "~1.0",
    "illuminate/view": "^8.47",
    "league/plates": "^3.4",
    "pollen-solutions/support": "^1.0",
    "twig/twig": "^3.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0"
  },
  "autoload": {
    "psr-4": {
      "Pollen\\View\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Pollen\\View\\": "tests"
    }
  },
  "suggest": {
    "pollen-solutions/container" : "Pollen Container Component - PSR-11 ready Dependencies Injection Container."
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true
  }
}
